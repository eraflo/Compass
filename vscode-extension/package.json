{
  "name": "compass-vscode",
  "displayName": "Compass Navigator",
  "description": "Interactive Runbook Runner for VS Code",
  "version": "2.0.5",
  "publisher": "eraflo",
  "icon": "media/compass.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/eraflo/Compass.git"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Compass",
      "properties": {
        "compass.binaryPath": {
          "type": "string",
          "default": "compass",
          "description": "Path to the compass executable."
        }
      }
    },
    "commands": [
      {
        "command": "compass.start",
        "title": "Start Runbook",
        "icon": "$(play)"
      },
      {
        "command": "compass.executeStep",
        "title": "Run Step",
        "icon": "$(play)"
      },
      {
        "command": "compass.search",
        "title": "Compass: Search Registry",
        "category": "Compass"
      },
      {
        "command": "compass.check",
        "title": "Compass: Check Integrity",
        "category": "Compass"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "compass.executeStep",
          "when": "view == compassSteps && viewItem == step",
          "group": "inline"
        }
      ],
      "editor/title": [
        {
          "command": "compass.start",
          "when": "resourceLangId == markdown",
          "group": "navigation"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "compass-explorer",
          "title": "Compass",
          "icon": "media/compass.png"
        }
      ]
    },
    "views": {
      "compass-explorer": [
        {
          "id": "compassSteps",
          "name": "Runbook Steps"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "compassSteps",
        "contents": "No active runbook.\n[Start Runbook](command:compass.start)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^16.x",
    "@types/vscode": "^1.80.0",
    "typescript": "^5.0.0"
  }
}
